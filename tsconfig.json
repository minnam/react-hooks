{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "es6", "dom"],
    "jsx": "react",
    "module": "commonjs",
		"moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "strict": true
  },
  "allowSyntheticDefaultImports": true,
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": [
      "**/*.test.ts",
      "**/type.ts"
    ]
  },
  "include": ["modules/index.ts", "examples/index.tsx"],
  "exclude": ["node_modules", "**/__tests__/*"]
}